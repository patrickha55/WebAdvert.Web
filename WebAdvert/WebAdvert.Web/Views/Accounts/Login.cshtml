@model WebAdvert.Web.Models.Accounts.LoginModel;

@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h4>Login using your email address and password</h4>
            <h5>
                <a asp-controller="Accounts" asp-action="SignUp">
                    Sign up here
                </a>
            </h5>
            <hr />
            <form method="post" asp-controller="Accounts" asp-action="Login">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Email">
                        @Html.DisplayNameFor(x => x.Email)
                    </label>
                    <input asp-for="Email" type="email" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">
                        @Html.DisplayNameFor(x => x.Password)
                    </label>
                    <input asp-for="Password" type="password" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RememberMe">
                        @Html.DisplayNameFor(x => x.RememberMe)
                    </label>
                    <input asp-for="RememberMe" type="checkbox" />
                    <span class="text-danger" asp-validation-for="RememberMe"></span>
                </div>

                <button type="submit">Sign In</button>
            </form>
        </div>
    </div>
</div>
